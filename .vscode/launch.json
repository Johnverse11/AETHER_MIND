{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "main.py",  // Change to your actual Flask app filename
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run"
                // You may want to remove --no-debugger and --no-reload for development
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}
